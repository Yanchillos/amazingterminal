<UserControl x:Class="AmazingTerminal.Windows.Terminal.Controls.Menu.MenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Content="Offline" Margin="5" Padding="5" FontSize="30" Command="{Binding SwitchControlCommand}" CommandParameter="Offline"/>
        <Button Grid.Column="1" Content="Live" Margin="5" Padding="5" FontSize="30" Command="{Binding SwitchControlCommand}" CommandParameter="Live"/>
        <Button Grid.Column="2" Content="History" Margin="5" Padding="5" FontSize="30" Command="{Binding SwitchControlCommand}" CommandParameter="History"/>
        <Button Grid.Column="3" Content="Results" Margin="5" Padding="5" FontSize="30" Command="{Binding SwitchControlCommand}" CommandParameter="Results"/>
    </Grid>
</UserControl>
